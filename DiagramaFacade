@startuml
class Drink {
    int codigo
    String nome
    List<String> ingredientes
    double preco
    double teorAlcoolico
    String categoria
    int calorias
    String descricao
    boolean disponivel
    
    + getCodigo(): int
    + setCodigo(int)
    + getNome(): String
    + setNome(String)
    + getIngredientes(): List<String>
    + setIngredientes(List<String>)
    + getPreco(): double
    + setPreco(double)
    + getTeorAlcoolico(): double
    + setTeorAlcoolico(double)
    + getCategoria(): String
    + setCategoria(String)
    + getCalorias(): int
    + setCalorias(int)
    + getDescricao(): String
    + setDescricao(String)
    + isDisponivel(): boolean
    + setDisponivel(boolean)
}

class DrinkBuilder {
    Drink drink
    
    + DrinkBuilder()
    + build(): Drink
    + setCodigo(int): DrinkBuilder
    + setNome(String): DrinkBuilder
    + setIngredientes(List<String>): DrinkBuilder
    + setPreco(double): DrinkBuilder
    + setTeorAlcoolico(double): DrinkBuilder
    + setCategoria(String): DrinkBuilder
    + setCalorias(int): DrinkBuilder
    + setDescricao(String): DrinkBuilder
    + setDisponivel(boolean): DrinkBuilder
}

class DrinkFacade {
    + createMargarita(): Drink
    + createMojito(): Drink
    + createVirginPinaColada(): Drink
}

DrinkBuilder --> Drink
DrinkFacade --> Drink
@enduml
